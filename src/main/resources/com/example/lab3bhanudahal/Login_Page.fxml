        <children>
            <TextField fx:id="usernameField" layoutX="19.0" layoutY="21.0" prefHeight="45.0" prefWidth="321.0" promptText="Enteer Email Adress" />
            <PasswordField fx:id="passwordField" layoutX="18.0" layoutY="88.0" prefHeight="45.0" prefWidth="322.0" promptText="Enter Password" />
            <Button fx:id="LogIn" layoutX="19.0" layoutY="157.0" onAction="#onLoginClick" prefHeight="45.0" prefWidth="319.0" style="-fx-background-color: blue;" text="Log In " textFill="#fcf2f2">
